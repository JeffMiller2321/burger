<h1>Eat Burgs!</h1>

<h2>Cats that are not sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-new_devoured="{{devoured}}">
		{{#if devoured}}EAT!{{else}}DEVOURED!{{/if}}
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
 <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-new_devoured="{{devoured}}">
		{{#if devoured}}EAT!{{else}}DEVOURED!{{/if}}
	</button>
</li>

    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
